<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.miniproject.kitchenautomation.add_groccery"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            style="@style/headerText"
            android:text="Add Groccery"
            android:layout_marginBottom="20dp"/>

        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/nameImageView"
                style="@style/profileDetailsImage" />

            <TextView
                android:id="@+id/nameTextView"
                android:text="Groccery Name"
                android:layout_toRightOf="@id/nameImageView"
                style="@style/profileDetailsTextMain" />

            <EditText
                android:id="@+id/groccery_name"
                style="@style/profileDetailsMiniText"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/nameImageView"
                android:hint="Ex: Onion Tomato" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />

        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/nameImageView1"
                style="@style/profileDetailsImage" />

            <TextView
                android:id="@+id/nameTextView1"
                android:text="Quantity In Kg:"
                android:layout_toRightOf="@id/nameImageView1"
                style="@style/profileDetailsTextMain" />

            <EditText
                android:id="@+id/quantity"
                style="@style/profileDetailsMiniText"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/nameImageView1"
                android:hint="Ex: 4" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />

        <TextView
            android:id="@+id/submit"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Save The Data"
            style="@style/profileStyledBackButton" />
        <View style="@style/proifleDetailsView" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>